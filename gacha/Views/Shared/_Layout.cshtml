<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gacha</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gacha.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css">
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" />


   
    <style>
        .fa-lg {
            /* font-size: 10px; */
            color: #f6eea2
        }

    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="layout-body">
    <div class="wrapper">
        <aside id="sidebar" class="js-sidebar">
            <!-- Content For Sidebar 開始-->
            <div class="h-100">
                <div class="sidebar-logo">
                    <a asp-controller="Home" asp-action="Index"><i class="fa-solid fa-crown"></i> 紐祜祿真換</a>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Member
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="" asp-controller="userInfoes" asp-action="Index">
                            <i class="fa-solid fa-user fa-lg pe-2" ></i>
                            會員基本資料
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="shippings" asp-action="Index">
                            <i class="fa-solid fa-truck-fast fa-lg pe-2"></i>
                            出貨紀錄
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="exchangeRecords" asp-action="Index">
                            <i class="fa-solid fa-repeat fa-lg pe-2"></i>
                            扭蛋交換紀錄
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="rechargeLists" asp-action="Index">
                            <i class="fa-solid fa-sack-dollar fa-lg pe-2"></i>
                            儲值紀錄
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="trackingLists" asp-action="Index">
                            <i class="fa-solid fa-heart-circle-plus fa-lg pe-2"></i>
                            追蹤清單紀錄
                        </a>
                        
                        <a class="sidebar-link" asp-area="" asp-controller="activity" asp-action="Index">
                            <i class="fa-solid fa-dice fa-lg pe-2"></i>
                            活動
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="activityType" asp-action="Index">
                            <i class="fa-solid fa-dice-six fa-lg pe-2"></i>
                            活動類別
                        </a>
                    </li>

                    <li class="sidebar-header">
                        Shop
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="" asp-controller="rechargePlan" asp-action="Index">
                            <i class="fa-regular fa-folder-open fa-lg pe-2"></i>
                            儲值方案管理
                        </a>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-target="#pages" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-list fa-lg pe-2"></i>
                            商品管理
                        </a>
                        <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="gachaTheme" asp-action="Index"><i class="fa-solid fa-palette fa-lg pe-2 ps-4"></i>主題</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="gachaMachine" asp-action="Index"><i class="fa-solid fa-wrench fa-lg pe-2 ps-4"></i>機台</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="gachaProduct" asp-action="Index"><i class="fa-solid fa-tablets fa-lg pe-2 ps-4"></i>扭蛋</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-header">
                        Admin
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="" asp-controller="permissions" asp-action="Index">
                            <i class="fa-solid fa-lock fa-lg pe-2"></i>
                            權限管理
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="admin" asp-action="Index">
                            <i class="fa-solid fa-user-gear fa-lg pe-2"></i>
                            管理員
                        </a> 
                        <a class="sidebar-link" asp-area="" asp-controller="role" asp-action="Index">
                            <i class="fa-solid fa-user-shield fa-lg pe-2"></i>
                            角色
                        </a>
                        <a class="sidebar-link" asp-area="" asp-controller="userInfoes" asp-action="GenderPie">
                            <i class="fa-solid fa-chart-pie fa-lg pe-2"></i>
                            圖表
                        </a>
                    </li>

                    </li>
                </ul>
            </div>
            <!-- Content For Sidebar 結束-->
        </aside>

        <div class="main">
            <!-- 導覽開始 -->
            <partial name="_LoginPartial" />
            <!-- 導覽結束 -->

            <!-- 內頁開始 -->

            <main class="content px-3 py-2">
                <div class="container-fluid">
                    <div class="mb-3">
                        @RenderBody()
                    </div>
                </div>
            </main>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
@*             <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> *@
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/localization/messages_zh_TW.min.js"></script>
            <script src="~/js/script.js"></script>
            @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
