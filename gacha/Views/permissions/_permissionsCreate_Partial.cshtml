@model gacha.Models.permission

@{
    ViewData["Title"] = "Create";
}


<h4>權限</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="createForm" asp-action="Create" method="post" class="needs-validation" novalidate>
                <!-- ADD validation if required -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group row mb-3">
                    <label asp-for="permissionDesc" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="permissionDesc" class="form-control" required maxlength="10" />
                        <span asp-validation-for="permissionDesc" class="text-danger"></span>
                        <div class="valid-feedback">漂漂亮亮</div>
                        <div class="invalid-feedback">描述必填,誠實招來</div>
                    </div>
                </div>

                <div class="form-group row justify-content-end">
                    <div class="col-sm-10 d-flex justify-content-end">
                        <button type="submit" class="btn button">
                            <i class="fa-solid fa-floppy-disk fa-lg"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

