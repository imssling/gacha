<div class="row">
    <!-- 表單部分 -->
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="id" class="control-label"></label>
            <input asp-for="id" class="form-control" readonly="readonly" style="background-color: #e9ecef;" />
            <span asp-validation-for="id" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="machineId" class="control-label"></label>
            <select class="form-select" asp-for="machineId" asp-items="ViewBag.machineId" required></select>
            <span asp-validation-for="machineId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="productName" class="control-label "></label>
            <input asp-for="productName" class="form-control " required />
            <span asp-validation-for="productName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="stock" class="control-label"></label>
            <input asp-for="stock" class="form-control" required />
            <span asp-validation-for="stock" class="text-danger"></span>
        </div>

    </div>
    <!-- 圖片顯示部分 -->
    <div class="col-md-6">
        <label asp-for="productPictureName" class="control-label"></label>
        <div class="form-group">
            <img id="showPicture-@Model.id" src="~/img/@Model.productPictureName" title="@Model.productName" style="width:280px;height:200px" class="my-3" onerror="this.onerror=null; this.src='/img/no-photo.png';" />
            <input asp-for="productPictureName" class="form-control" type="file" accept="image/*" onchange="PreviewImage(this)"  />
            <span asp-validation-for="productPictureName" class="text-danger"></span>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
