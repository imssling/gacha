            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.password)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.password)
            </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.account">Edit</a> | *@
                    <div class="#">
                        <a class="btn button mb-2 me-2" href="" data-bs-toggle="modal" data-bs-target="#adminEditModal-@item.account">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        
                    </div>
                    <div>
                        <a type="button"  class="btn button mb-2 deleteBtn" asp-action="Delete" asp-route-id="@item.account"> <i class="fa-solid fa-trash"></i></a>
                    </div>
                    @* <a asp-action="Details" asp-route-id="@item.account"><i class="fa-solid fa-list fa-lg"></i></a> | *@

                </td>
            </tr>
        }
    </tbody>
</table>
