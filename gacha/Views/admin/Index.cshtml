@model IEnumerable<admin_ViewModel>

@{
    ViewData["Title"] = "Index";
}
@section Styles {

    <link href="~/css/datatables.css" rel="stylesheet" />

}

<h1>管理員</h1>

<p>
    @* <a asp-action="Create">Create New</a> *@
    <a class="btn button" data-bs-toggle="modal" data-bs-target="#adminCreateModal">
