<h4>修改主題</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="editForm" asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group row mb-3">
                    <!-- Added mb-3 for margin -->
                    <label asp-for="id" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="id" class="form-control" required readonly="readonly" />
                        <span asp-validation-for="id" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row mb-3">
                    <!-- Added mb-3 for margin -->
                    <label asp-for="themeName" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="themeName" class="form-control" id="themeName" required />
                        <span asp-validation-for="themeName" class="text-danger"></span>
                        <div class="valid-feedback">漂漂亮亮</div>
                        <div class="invalid-feedback">活動名稱必填,誠實招來</div>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="status" class="col-sm-3 col-form-check fw-bold"></label>
                    <div class="col-sm-9">
                        <input class="form-check-input" asp-for="status" /> @Html.DisplayNameFor(model => model.status)
                    </div>
                </div>
                <div class="form-group row justify-content-end">
                    <div class="col-sm-10 d-flex justify-content-end">
                        <button type="submit" class="btn button">
                            <i class="fa-solid fa-floppy-disk fa-lg"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
