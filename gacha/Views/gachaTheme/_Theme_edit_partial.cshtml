@model gacha.Models.gachaTheme

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-2">
                    <label asp-for="id" class="control-label"></label>
                    <input asp-for="id" class="form-control" readonly="readonly" required style="background-color: #e9ecef;" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group col-8">
                    <label asp-for="themeName" class="control-label"></label>
                    <input asp-for="themeName" class="form-control" required />
                    <span asp-validation-for="themeName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group form-check form-switch my-3">
                <label class="form-check-label" for="statusSwitch" asp-for="status">
                    @Html.DisplayNameFor(model => model.status)
                </label>
            <input class="form-check-input" type="checkbox" asp-for="status" id="statusSwitch" />
            </div>
            @* <div class="form-group">
            <label asp-for="status" class="control-label"></label>
            <input asp-for="status" class="form-control" />
            <span asp-validation-for="status" class="text-danger"></span>
            </div> *@
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
