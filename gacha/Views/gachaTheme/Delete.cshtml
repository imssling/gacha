@model gacha.Models.gachaTheme

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
}

<div>
    <h4>刪除扭蛋主題</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.themeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.themeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="刪除" class="btn button delete" />
        <a asp-action="Index" class="btn button"><i class="fa-solid fa-backward"></i></a>
    </form>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.delete').on('click', function (event) {
                event.preventDefault(); // 防止表單提交
                var form = $(this).closest('form');
                Swal.fire({
                    title: '確定要刪除嗎?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: '確定',
                    cancelButtonText: '取消'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // 用戶確認後提交表單
                    }
                });
            });
        });
    </script>
}