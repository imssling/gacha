<h4>修改儲值方案</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group row mb-3">
                    <label asp-for="id" class="col-sm-2 col-form-label fw-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="id" class="form-control" readonly="readonly" />
                        <span asp-validation-for="id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="name" class="col-sm-2 col-form-label fw-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="name" class="form-control"/>
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="description" class="col-sm-2 col-form-label fw-bold"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="description" class="form-control mb-2" rows="5"></textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="price" class="col-sm-2 col-form-label fw-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="price" class="form-control" id="price" />
                        <span asp-validation-for="price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="point" class="col-sm-2 col-form-label fw-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="point" class="form-control" id="point" readonly="readonly" />
                        <span asp-validation-for="point" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="statusSwitch" class="col-sm-2 col-form-label fw-bold">
                        @Html.DisplayNameFor(model => model.status)
                    </label>
                    <div class="col-sm-9 d-flex align-items-center ">
                        <input asp-for="status" class="form-check-input" type="checkbox" id="statusSwitch" />
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row justify-content-end">
                    <div class="col-sm-10 d-flex justify-content-end">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


