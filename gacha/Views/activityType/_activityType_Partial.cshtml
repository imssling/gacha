@model gacha.Models.activityType

@{
    ViewData["Title"] = "Edit";
}


<h4>活動類別</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="editForm" asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group row mb-3">
                    <label asp-for="id" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="id" class="form-control" readonly="readonly" />
                        <span asp-validation-for="id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="name" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="name" class="form-control" id="name" required />
                        <span asp-validation-for="name" class="text-danger"></span>
                        <div class="valid-feedback">漂漂亮亮</div>
                        <div class="invalid-feedback">活動名稱必填,誠實招來</div>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="createdAt" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="createdAt" class="form-control" readonly="readonly" />
                        <span asp-validation-for="createdAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="status" class="col-sm-3 col-form-check fw-bold"></label>
                    <div class="col-sm-9">
                        <input class="form-check-input" asp-for="status" /> @Html.DisplayNameFor(model => model.status)
                    </div>
                </div>
                <div class="form-group row justify-content-end">
                    <div class="col-sm-10 d-flex justify-content-end">
                        <button type="submit" class="btn button">
                            <i class="fa-solid fa-floppy-disk fa-lg"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


