@model gacha.Models.gachaMachine

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
}

<div>
    <h4>刪除機台</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.machineName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.machineName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.machineDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.machineDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.machinePictureName)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/img/@Html.DisplayFor(model => model.machinePictureName)" style="width:320px;height:240px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.createTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.createTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.theme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.theme.themeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="刪除" class="btn button delete" />
        <a asp-action="Index" class="btn button"><i class="fa-solid fa-backward"></i></a>
    </form>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/delete_sweetalert.js"></script>
}
