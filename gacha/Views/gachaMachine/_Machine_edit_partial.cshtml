 @model gacha.Models.gachaMachine

@{
    ViewData["Title"] = "Edit";
}
@section Styles {
    <link href="~/css/datatables.min.css" rel="stylesheet" />
}


    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group mb-3 col-md-4 ">
                    <label asp-for="id" class="control-label"></label>
                    <input asp-for="id" class="form-control" readonly="readonly" style="background-color: #e9ecef;" required />
                    <span asp-validation-for="id" class="text-danger"></span>
                    
                </div>
                <div class="form-group mb-3 col-md-8 ">
                    <label asp-for="themeId" class="control-label"></label>
                    <select class="form-select" asp-for="themeId" asp-items="ViewBag.themeId" required>
                    </select>
                    <span asp-validation-for="themeId" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group mb-3">
                <label asp-for="machineName" class="control-label"></label>
                <input asp-for="machineName" class="form-control" required />
                <span asp-validation-for="machineName" class="text-danger"></span>
                <div class="invalid-feedback">
                    機台名稱必填
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="machineDescription" class="control-label"></label>
                <textarea asp-for="machineDescription" class="form-control" rows="3" placeholder="(非必填)" style="resize: none;"></textarea>
                <span asp-validation-for="machineDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="price" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="price" class="form-control" required min="0">
                </div>
                <span asp-validation-for="price" class="text-danger"></span>
            </div>

            <div class="form-group form-check form-switch mb-3" required>
                <label class="form-check-label" for="statusSwitch">
                        @Html.DisplayNameFor(model => model.status)</label>
                <input class="form-check-input" type="checkbox" asp-for="status" id="statusSwitch" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="machinePictureName" class="control-label"></label>
            <img id="showPicture-@Model.id" src="~/img/@Model.machinePictureName" title="尚無圖案" style="width:320px;height:240px" class="my-3" onerror="this.onerror=null; this.src='/img/no-photo.png';" />
                <input asp-for="machinePictureName" class="form-control" type="file" accept="image/*"  onchange="PreviewImage(this)" />
                    <span asp-validation-for="machinePictureName" class="text-danger"></span>
            </div>
        </div>
    </div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}

